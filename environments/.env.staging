# Staging Environment Configuration
ENVIRONMENT=staging

# Database Configuration
POSTGRES_HOST=staging-postgres
POSTGRES_PORT=5432
POSTGRES_DB=ats_staging
POSTGRES_USER=ats_staging_user
POSTGRES_PASSWORD=${STAGING_DB_PASSWORD}

# Redis Configuration
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=${STAGING_SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://staging-redis:6379/0
CELERY_RESULT_BACKEND=redis://staging-redis:6379/0

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# Storage Configuration
STORAGE_PATH=/app/storage/staging
BACKUP_PATH=/app/backups/staging

# Email Configuration
EMAIL_HOST=${STAGING_EMAIL_HOST}
EMAIL_PORT=${STAGING_EMAIL_PORT}
EMAIL_USER=${STAGING_EMAIL_USER}
EMAIL_PASSWORD=${STAGING_EMAIL_PASSWORD}

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Security Configuration
RATE_LIMIT_ENABLED=true
SECURITY_SCAN_ENABLED=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_VERIFICATION_ENABLED=true