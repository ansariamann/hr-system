# Production Environment Configuration
ENVIRONMENT=production

# Database Configuration
POSTGRES_HOST=production-postgres
POSTGRES_PORT=5432
POSTGRES_DB=ats_production
POSTGRES_USER=ats_production_user
POSTGRES_PASSWORD=${PRODUCTION_DB_PASSWORD}

# Redis Configuration
REDIS_HOST=production-redis
REDIS_PORT=6379
REDIS_DB=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=8
SECRET_KEY=${PRODUCTION_SECRET_KEY}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Celery Configuration
CELERY_BROKER_URL=redis://production-redis:6379/2
CELERY_RESULT_BACKEND=redis://production-redis:6379/2

# Application Configuration
LOG_LEVEL=WARNING
DEBUG=false

# Storage Configuration
STORAGE_PATH=/app/storage/production
BACKUP_PATH=/app/backups/production

# Email Configuration
EMAIL_HOST=${PRODUCTION_EMAIL_HOST}
EMAIL_PORT=${PRODUCTION_EMAIL_PORT}
EMAIL_USER=${PRODUCTION_EMAIL_USER}
EMAIL_PASSWORD=${PRODUCTION_EMAIL_PASSWORD}

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true

# Alert Configuration
ALERTS_EMAIL_ENABLED=true
ALERTS_EMAIL_RECIPIENTS=${PRODUCTION_ALERT_EMAILS}
ALERTS_SLACK_ENABLED=true
ALERTS_SLACK_WEBHOOK_URL=${PRODUCTION_SLACK_WEBHOOK}
ALERTS_SLACK_CHANNEL=#alerts-production

# SMTP Configuration for Alerts
SMTP_HOST=${PRODUCTION_SMTP_HOST}
SMTP_PORT=${PRODUCTION_SMTP_PORT}
SMTP_USERNAME=${PRODUCTION_SMTP_USERNAME}
SMTP_PASSWORD=${PRODUCTION_SMTP_PASSWORD}

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=${PRODUCTION_GRAFANA_PASSWORD}

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Observability Configuration
OBSERVABILITY_ENABLED=true
OBSERVABILITY_60_SECOND_DIAGNOSTIC=true
OBSERVABILITY_CACHE_TTL=30

# Log Aggregation Configuration
LOKI_ENABLED=true
PROMTAIL_ENABLED=true
LOG_RETENTION_DAYS=30

# Security Configuration
RATE_LIMIT_ENABLED=true
SECURITY_SCAN_ENABLED=true

# Backup Configuration
BACKUP_SCHEDULE=0 */4 * * *  # Every 4 hours
BACKUP_RETENTION_DAYS=90
BACKUP_VERIFICATION_ENABLED=true
BACKUP_VERIFICATION_SCHEDULE=0 6 * * *  # Daily at 6 AM

# Recovery Time Objectives
RTO_MAX_RECOVERY_TIME_MINUTES=5
RPO_MAX_DATA_LOSS_MINUTES=15

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Disaster Recovery Configuration
DR_ENABLED=true
DR_BACKUP_LOCATION=${PRODUCTION_BACKUP_LOCATION}
DR_RESTORE_TESTING_ENABLED=true